

<%= simple_form_for(@food_truck, html: {class: 'form-signin'}) do |f| %>
  <h3>Add A Food Truck</h3>

  <%= f.input :name, label: false,
                     placeholder: 'Name',
                     required: true,
                     input_html: {class: 'form-control'} %>
  <br>
  <%= f.input :truck_photo, type: :file, input_html: { class: 'form-control'} %>
  <br>
  <%= f.input :website, label: false,
                        placeholder: 'Website',
                        input_html: {class: 'form-control'} %>
  <br>
  <%= f.input :description, label: false,
                            placeholder: 'Description',
                            required: true,
                            input_html: {class: 'form-control'} %>
  <br>
  <%= f.button :submit, value: 'Create Food Truck',
                        class: 'btn btn-lg btn-primary btn-block' %>

<% end %>
