<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f| %>
  <h2>Sign in</h2>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control'} %>
    <%= f.input :password, required: true, input_html: { class: 'form-control'} %>
    <%= f.input :remember_me, inline_label: 'Yes, remember me', label: false, input_html: { class: 'checkbox'} , as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in", class: 'btn btn-lg btn-primary btn-block' %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>


