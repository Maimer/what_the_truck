<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-signin'}) do |f| %>
  <h2>Sign up</h2>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, required: true, autofocus: true, input_html: { class: 'form-control'} %>
    <%= f.input :last_name, required: true, input_html: { class: 'form-control'} %>
    <%= f.input :email, required: true, input_html: { class: 'form-control'} %>
    <%= f.input :password, required: true, input_html: { class: 'form-control'} %>
    <%= f.input :password_confirmation, required: true, input_html: { class: 'form-control'} %>
    <%= f.input :profile_photo, type: :file, input_html: { class: 'form-control'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn btn-lg btn-primary btn-block" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>
